{
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"tailwindCSS.experimental.classRegex": [
		["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
	],
	"[sql]": {
		"editor.defaultFormatter": "ReneSaarsoo.sql-formatter-vsc"
	},
	"bun.runtime": "/opt/homebrew/bin/bun",
	"bun.debugTerminal.stopOnEntry": false,
	"bun.test.filePattern": "**/*{.test.,.spec.,_test_,_spec_}{js,ts,tsx,jsx,mts,cts}",
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.formatOnSave": false,
	"typescript.preferences.importModuleSpecifier": "shortest",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.preferences.autoImportFileExcludePatterns": [
		"next/router.d.ts",
		"next/dist/client/router.d.ts"
	],
	"terminal.integrated.localEchoStyle": "dim",
	"search.exclude": {
		"**/node_modules": true
	},
	"i18n-ally.localesPaths": ["apps/web/locales"],
	"i18n-ally.keystyle": "nested",
	"i18n-ally.enabledFrameworks": ["next-intl"]
}
