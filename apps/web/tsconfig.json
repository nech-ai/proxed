{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@config": ["../../config"],
			"content-collections": ["./.content-collections/generated"]
		},
		"strict": true,
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.ts",
		"../../config.ts"
	],
	"exclude": ["node_modules"]
}
