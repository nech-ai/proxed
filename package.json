{
	"name": "proxed",
	"private": true,
	"workspaces": ["packages/*", "apps/*", "tooling/*"],
	"scripts": {
		"build": "turbo build",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo clean",
		"dev": "dotenv -c -- turbo dev --parallel",
		"dev:web": "dotenv -c -- turbo dev --filter=@proxed/web",
		"dev:app": "dotenv -c -- turbo dev --filter=@proxed/app",
		"dev:api": "dotenv -c -- turbo dev --filter=@proxed/api",
		"dev:email": "dotenv -c -- turbo dev --filter=@proxed/mail",
		"start:web": "dotenv -c -- turbo start --filter=@proxed/web",
		"start:app": "dotenv -c -- turbo start --filter=@proxed/app",
		"supabase:start": "dotenv -c -- bun run --cwd apps/api dev",
		"supabase:reset": "dotenv -c -- bun run --cwd apps/api reset",
		"supabase:generate": "dotenv -c -- bun run --cwd apps/api generate",
		"test": "turbo test --parallel",
		"format": "turbo format --cache-dir=.turbo --continue -- --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "format:fix": "turbo format --cache-dir=.turbo --continue -- --write --cache --cache-location='node_modules/.cache/.prettiercache' --ignore-path='../../.gitignore'",
    "lint": "turbo lint --cache-dir=.turbo --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache' && manypkg check",
    "lint:fix": "turbo lint --cache-dir=.turbo --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache' && manypkg fix",
    "typecheck": "turbo typecheck --cache-dir=.turbo"
	},
	"devDependencies": {
		"prettier": "^3.4.2",
		"@manypkg/cli": "^0.23.0",
		"dotenv-cli": "^8.0.0",
		"tsconfig": "workspace:*",
		"turbo": "^2.3.3",
		"type-fest": "^4.32.0",
		"typescript": "5.7.3"
	},
	"packageManager": "bun@1.1.43"
}
